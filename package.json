		"@angular/language-service": "^7.1.4",
		"@types/gsap": "^1.20.0",
		"@types/node": "~10.12.18",
		"codelyzer": "~4.5.0",
		"electron": "^4.0.0",
		"electron-builder": "^20.38.4",
		"ts-node": "~7.0.1",
		"tslint": "~5.12.0",
		"typescript": "3.1.1"
	}
