	"private": true,
	"main": "main.js",
	"repository": "github:philipf5/sg-dial-sim",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build --prod --base-href ./ && electron-builder build -mw",
		"lint": "ng lint",
		"electron": "electron ."
	},
	"build": {
		"appId": "com.philipf5.sg-dial-sim",
		"productName": "SG Dial Sim",
		"copyright": "Copyright Â© 2018 Philip Fulgham",
		"directories": {
			"output": "electron-build"
		},
		"files": [
			"dist/",
			"main.js",
			"package.json"
		],
		"mac": {
			"category": "public.app-category.games",
			"target": "dmg"
		},
		"win": {
			"target": "portable"
		}
	},
	"dependencies": {
		"@angular/animations": "^7.1.4",
