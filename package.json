{
	"name": "sg-dial-sim",
	"version": "0.1.0",
	"author": "Philip Fulgham (https://www.philipfulgham.com)",
	"license": "MIT",
	"private": true,
	"main": "main.js",
	"repository": "github:philipf5/sg-dial-sim",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build --prod --base-href ./",
		"package": "electron-builder build -mw",
		"lint": "ng lint",
		"electron": "electron ."
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"build": {
		"appId": "com.philipf5.sg-dial-sim",
		"productName": "SG Dial Sim",
		"artifactName": "${productName} ${version}-${os}.${ext}",
		"directories": {
			"output": "electron-build"
		},
		"files": [
			"dist/",
			"main.js",
			"package.json"
		],
		"mac": {
			"category": "public.app-category.games",
			"target": "dmg"
		},
		"win": {
			"target": "portable"
		}
	},
	"dependencies": {
		"@angular/animations": "^8.0.1",
		"@angular/common": "^8.0.1",
		"@angular/compiler": "^8.0.1",
		"@angular/core": "^8.0.1",
		"@angular/forms": "^8.0.1",
		"@angular/platform-browser": "^8.0.1",
		"@angular/platform-browser-dynamic": "^8.0.1",
		"@angular/router": "^8.0.1",
		"@ngrx/effects": "^8.0.1",
		"@ngrx/store": "^8.0.1",
		"@ngrx/store-devtools": "^8.0.1",
		"core-js": "^2.6.1",
		"gsap": "^2.0.2",
		"ngx-electron": "^2.0.0",
		"node-sass": "^4.11.0",
		"rxjs": "^6.5.2",
		"zone.js": "^0.9.1"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^0.800.3",
		"@angular/cli": "~8.0.3",
		"@angular/compiler-cli": "^8.0.1",
		"@angular/language-service": "^8.0.1",
		"@types/gsap": "^1.20.0",
		"@types/node": "~10.12.18",
		"codelyzer": "~4.5.0",
		"electron": "^4.0.0",
		"electron-builder": "^20.38.4",
		"husky": "^2.1.0",
		"prettier": "^1.17.0",
		"pretty-quick": "^1.10.0",
		"ts-node": "~7.0.1",
		"tslint": "~5.12.0",
		"typescript": "3.4.5"
	}
}
